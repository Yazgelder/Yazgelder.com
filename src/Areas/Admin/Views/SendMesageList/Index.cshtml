@model List<SendMesageList>
@{
    Layout = $"~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gönderilen Mailler Listesi";
    int i = 1;
}



<section id="shopping-cart" class="bg-grey">
    <div class="container">
         
             <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">To</th>
                            <th scope="col">Title</th>
                            <th scope="col">SendingDate</th>
                            <th scope="col">Fonsiyonlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.To</td>
                            <td>@item.Title </td>
                            <td>@item.SendingDate </td>
                            <td>
                                <a class="btn btn-warning" href="/Admin/SendMesageList/Detail/@item.Id">Detail</a>
                           
                            </td>
                        </tr>
                            i++;
                        }
                     
                    </tbody>
                </table>
            </div> 
    
        </div>
    
    </div>
</section>
