    <!-- section begin -->
    <section id="section-news">
        <div class="container">
            <div class="row">
                <div class="latest-blog-posts">
                    <div class="col-md-12">
                        <h2 class="box-title">Son Haberler</h2>
                        <div class="compact-buttons">
                            <div class="latest-prev compact-prev"><i class="fa fa-angle-left"></i></div>
                            <div class="latest-next compact-next"><i class="fa fa-angle-right"></i></div>
                        </div>
                        <div class="tiny-border"></div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="latest-news-items-3">
                        @foreach (var item in _context.News.Where(x=>!x.IsDraft).OrderByDescending(x => x.SenderDate).Take(6).ToList())
                        {
                            var img = _context.Pictures.Where(y => y.RelationId == item.Id && y.RecordType == 6 && y.RecordType2 == 1).Select(y => new Yazgelder.Areas.Admin.Models.FileModel() { FileName = y.Picture, Title = y.Title, Type = y.RecordType, SubType = y.RecordType2 }).FirstOrDefault();
                            <div class="item">
                                <div class="latest-blog-post-img">
                                    <img alt="@(img==null?"Yazgelder":img.Title)" src="@(img==null?"/images/ShareImage.png":img.FileName)" class="img-responsive">

                                    <div class="latest-blog-post-date">
                                        @item.SenderDate.Day
                                        <span>@item.SenderDate.ToString("MMM")</span>
                                    </div>
                                </div>
                                <div class="latest-blog-post-details">
                                    <p class="title"><a href="/News/Detail/@item.Id" title="@item.Title">@item.Title</a></p>
                                    <p>@_sysFunctions.GetString(item.Body, 200)</p>
                                    <div class="latest-blog-post-data">

                                        <span class="btn-read"><a href="/News/Detail/@item.Id"><i class="fa fa-plus-square"></i> Devamı</a></span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- section close -->
    <!-- section begin -->
    <section id="section-partner" class="bg-grey">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <h2 class="inline">Maddi Manevi Destekcilerimiz</h2>
                    <div class="compact-buttons">
                        <div class="partner-prev compact-prev"><i class="fa fa-angle-left"></i></div>
                        <div class="partner-next compact-next"><i class="fa fa-angle-right"></i></div>
                    </div>
                    <div class="tiny-border"></div>

                    <div id="client-logo" class="our-partner">
                        @foreach (var item in _context.Link.OrderByDescending(x => x.Count).ToList())
                        {
                            var img = _context.Pictures.Where(y => y.RelationId == item.Id && y.RecordType == 4 ).Select(y => new Yazgelder.Areas.Admin.Models.FileModel() { FileName = y.Picture, Title = y.Title, Type = y.RecordType, SubType = y.RecordType2 }).FirstOrDefault();
                            <div class="item"><a href="/home/PostLink/@item.Id" target="_blank"><img src="@img.FileName" alt="@item.Name" /></a></div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

