@model List<Dues>
@{
    Layout = $"~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Aidatlar";
    int i = 1;
}



<section id="shopping-cart" class="bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-right">
                <a class="btn btn-success" href="/Admin/Dues/EditOrInsert/@Guid.Empty">Yeni Ekle</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Year</th>
                            <th scope="col">Month</th>
                            <th scope="col">Money</th>
                            <th scope="col">Fonsiyonlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Year</td>
                                <td>@item.Month </td>
                                <td>@item.Money </td>
                                <td>
                                    <a class="btn btn-warning" href="/Admin/Dues/EditOrInsert/@item.Id">Düzenle</a>
                                    <a class="btn btn-danger" onclick="return confirm('Emin misin?')" href="/Admin/Dues/Delete/@item.Id">Sil</a>
                                </td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
