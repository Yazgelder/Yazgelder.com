@model Member
@{
    Layout = $"~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kullanıcılar";
}

<section class="shopping-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="/Admin/member/EditOrInsert" method="post" class="wpcf7-form form-horizontal">

                    <fieldset>

                        <legend>@ViewData["Title"]</legend>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">IsHonorary</label>
                            <div class="col-md-4">
                                @Html.CheckBoxFor(x => x.IsHonorary, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">TCIdentity</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.TCIdentity, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Name</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Surname</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Nationality</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Nationality, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Email</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-md" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Telephone</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control input-md" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">FatherName</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control input-md" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">MotherName</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.MotherName, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Gender</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Gender, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Job</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Job, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">PlaceOfResidence</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.PlaceOfResidence, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Reference</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Reference, new { @class = "form-control input-md" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Reference2</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.Reference2, new { @class = "form-control input-md" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">ApplicationDate</label>
                            <div class="col-md-4">
                                <input asp-for="ApplicationDate" class="form-control input-md" asp-format="{0:yyyy'-'MM'-'dd}" type="date" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Birthday</label>
                            <div class="col-md-4">
                                <input asp-for="Birthday" class="form-control input-md" asp-format="{0:yyyy'-'MM'-'dd}" type="date" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">ApprovalDate</label>
                            <div class="col-md-4">
                                <input asp-for="ApprovalDate" class="form-control input-md" asp-format="{0:yyyy'-'MM'-'dd}" type="date" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="passwordinput">Active</label>
                            <div class="col-md-4">
                                @Html.CheckBoxFor(x => x.Active, new { @class = "form-control input-md" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for=""></label>
                            <div class="col-md-4">
                                <button class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>